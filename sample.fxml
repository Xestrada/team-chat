<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" stylesheets="/sample/sample.css" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">


    <Label text="Server IP: " GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="addrField" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1" />

    <Button onAction="#connect" text="Connect" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button onAction="#disconnect" text="Disconnect" GridPane.columnIndex="3" GridPane.rowIndex="2" />

    <TextArea fx:id="chatField" editable="false" prefHeight="250.0"
              prefWidth="400.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" GridPane.rowSpan="3">
      <padding>
         <Insets left="5.0" right="5.0" />
      </padding></TextArea>

    <TextField fx:id="inputField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6" />
    <Button onAction="#sendMessage" text="Send" GridPane.columnIndex="3" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
