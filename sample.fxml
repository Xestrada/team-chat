<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="pane" alignment="center" hgap="10" stylesheets="sample.css" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">


    <Label text="Server IP: " GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="addrField" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1" />

    <Label text="Username" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="nameField" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="2" />

    <Button fx:id="conButton" onAction="#connect" text="Connect" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button fx:id="disconButton" onAction="#disconnect" text="Disconnect" GridPane.columnIndex="3" GridPane.rowIndex="3" />

    <TextArea fx:id="chatField" editable="false" prefHeight="250.0"
              prefWidth="400.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="4" GridPane.rowSpan="3">
      <padding>
         <Insets left="5.0" right="5.0" />
      </padding></TextArea>

    <TextField fx:id="inputField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="7" />
    <Button fx:id="sendButton" onAction="#sendMessage" text="Send" GridPane.columnIndex="3" GridPane.rowIndex="7" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
